<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Cronica_NotComp" >


    <TextView
        android:id="@+id/tituloC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dip"
        android:text="@string/titulo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17sp" />


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tituloC"
        android:layout_below="@+id/tituloC"
        android:paddingBottom="30dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fechaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tituloC"
                android:layout_below="@+id/tituloC"
                android:gravity="center"
                android:paddingLeft="3dip"
                android:text="@string/fecha"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#DD0101" />

            <ImageView
                android:id="@+id/imagenArti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxWidth="200dp"
                android:maxHeight="1dp"
                android:src="@drawable/ic_launcher"
                />
           <TextView
                android:id="@+id/resumenC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dip"
                android:text="@string/textoresumen"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textIsSelectable="true"             />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/linkC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:text="@string/link"
         android:textColor="#6D84B4"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>